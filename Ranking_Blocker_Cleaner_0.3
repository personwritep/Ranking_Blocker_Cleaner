    let inner=
        '<div id="modal">'+
        '<div id="menu_RBC">'+

        '<div class="menu_inner1">'+
        '<div class="inner_RBC">'+
        '<input id="button1" type="submit" value="ファイル読込み">'+
        '<input id="button2" type="file">'+
