        '</div>'+
        '<div class="inner_RBC">'+
        '<span class="result_disp"></span>'+
        '</div>'+
        '<div>'+
        '<a href="'+ help_url +'" target="_blank" rel="noopener noreferrer">'+
        SVG_h +'</a>'+
        '<input id="button0" type="submit" value="✖">'+
        '</div></div>'+

        '<div class="menu_inner2">'+
        '<ul></ul>'+
        '</div></div>'+

        '<style>'+
        'html { overflow: hidden; } '+
